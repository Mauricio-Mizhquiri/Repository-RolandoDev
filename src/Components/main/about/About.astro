---
import i18next, { t } from "i18next";
---

<section class="section-about">
    <div class="linear-gradient-1"></div>
    <div class="container-about">
        <div class="container-text-about">
            <h2 class="title-about" id="about">{t("navigation.about")}</h2>
            <p>
                {t("about")}
            </p>
        </div>
        <div class="container-svg-about">
            <div class="container-svg">
                <lottie-player
                    src="https://lottie.host/b938bd10-83ba-4335-9c95-61a6a2a6a550/8NeL1kACjO.json"
                    background="transparent"
                    speed="1"
                    style="width: 380px; height: 380px; position:relative;"
                    loop
                    autoplay></lottie-player>
            </div>
        </div>
    </div>
</section>
<script
    src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"
></script>

<style>
    .linear-gradient-1 {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        /* background: radial-gradient(at left center, rgba(1, 190, 150 , 0.5), transparent , transparent); */
        background: linear-gradient(to top, #000, #005cd4);
        background:;
        z-index: 0;
    }
    .section-about {
        position: relative;
        background-color: #111111;
    }
    .container-about {
        position: relative;
        width: 90%;
        display: flex;
        margin: 0 auto;
        max-width: 1355px;
    }
    .container-text-about {
        position: relative;
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .title-about {
        position: relative;
        display: block;
        font-size: 27px;
        padding: 10px 0;
        color: #f6f6f9;
        width: 100%;
        font-weight: 800;
        scroll-margin-top: 80px;
    }
    .container-text-about p {
        font-size: 17px;
        color: #f6f6f9;
        text-align: justify;
        letter-spacing: 1px;
    }
    .container-svg-about {
        position: relative;
        width: 50%;
    }
    .container-svg {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-left: 100px;
    }
    @media (max-width: 900px) {
        /*Resposivo de la seccion sobre mi*/
        .container-about {
            flex-direction: column;
        }
        .container-svg-about {
            width: 100%;
        }
        .container-svg {
            justify-content: start;
            align-items: end;
            padding: 0;
        }
        .container-text-about {
            width: 100%;
            padding: 10px 0;
        }
    }
</style>
