---
import i18next, { t } from "i18next";
import { Image } from "astro:assets";
import photoperfil from "../../../../public/img/photo-perfil.png";
const professionText = t("profession");
const categoryText = t("category");
const levelText = t("level");
const charactersProfession = professionText.split("");
const charactersCategory = categoryText.split("");
const charactersLevel = levelText.split("");
---

<div class="content-presentation">
    <div class="linear-gradient-2"></div>
    <div class="linear-gradient-1"></div>

    <!--Contenedor general -->
    <div class="container-presentation">
        <div class="container-text">
            <h2 class="text-name">
                {t("welcome")}
                <span class="animation">{t("text-name")}</span>
            </h2>
            <div class="container-profession">
                <div>
                    {
                        charactersProfession.map((char, index) => (
                            <span class="p-profession" data-index={index}>
                                {char}
                            </span>
                        ))
                    }
                    <span class="">&nbsp;</span>
                </div>
                <div class="">
                    {
                        charactersCategory.map((char, index) => (
                            <span class="p-profession" data-index={index}>
                                {char}
                            </span>
                        ))
                    }
                    <span class="">&nbsp;</span>
                    {
                        charactersLevel.map((char, index) => (
                            <span class="p-profession" data-index={index}>
                                {char}
                            </span>
                        ))
                    }
                </div>

                <p class="p-presentation">
                    {t("presentation")}
                </p>
                <div class="container-curriculum">
                    <a href="https://wa.me/593987266475" target="_blank" class="a-action">
                        {t("curriculum.contact")}
                    </a>
                    <a
                        href="https:kkfkfkf"
                        ,
                        class="a-curriculum"
                        ,
                        target="_blank"
                    >
                        {t("curriculum.cv")}
                    </a>
                </div>
            </div>
        </div>
        <div class="container-photo-profile">
            <div class="photo-perfil">
                <picture>
                    <Image
                        src={photoperfil}
                        alt="Mauro Mizhquiri"
                        id="Inicio"
                    />
                </picture>
            </div>
        </div>
    </div>
    <script>
        const letters = document.querySelectorAll<HTMLElement>(".p-profession");
        letters.forEach((letter) => {
            letter.addEventListener("mouseenter", () => {
                toogle(letter);
            });
        });

        function toogle(letter: HTMLElement) {
            letter.classList.add("bouncing");
            letter.addEventListener("animationend", () => {
                letter.classList.remove("bouncing");
            });
        }
    </script>
</div>
<style>
    .content-presentation {
        position: relative;
        width: 100%;
        height: 100%;
    }
    .linear-gradient-1 {
        position: absolute;
        left: 0;
        top: 0;
        width: 500px;
        height: 520px;
        background: radial-gradient(
            at left center,
            #005cd4,
            transparent,
            transparent
        );
        z-index: 0;
    }
    .linear-gradient-2 {
        position: absolute;
        right: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            at right center,
            #005cd4,
            rgb(0, 0, 0),
            rgb(0, 0, 0)
        );
        z-index: 0;
    }
    .container-presentation {
        position: relative;
        display: flex;
        flex-direction: row;
        padding: 50px 0;
        width: 90%;
        margin: 0 auto;
        max-width: 1355px;
    }
    .container-text {
        position: relative;
        width: 50%;
        color: #f6f6f9;
    }
    .text-name {
        padding: 15px 0;
        font-size: 40px;
        color: #f6f6f9;
        font-weight: 800;
        letter-spacing: 2px;
        margin-top: 30px;
    }
    .animation {
        background: linear-gradient(
            to right,
            #005cd4 20%,
            #38b6ff 40%,
            #38b6ff 60%,
            #005cd4 80%
        );
        background-size: 200%;
        background-clip: text;
        color: transparent;
        font-weight: 600;
        animation: text 4s linear infinite;
    }
    @keyframes text {
        to {
            background-position: 200% center;
        }
    }

    @keyframes loop {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-50%);
        }
    }
    .container-profession {
        cursor: pointer;
        padding: 5px 0;
    }

    .p-profession {
        font-size: 30px;
        font-weight: 800;
        cursor: pointer;
        display: inline-block;
        text-transform: capitalize;
        letter-spacing: 5px;
    }
    .bouncing {
        transition: 0.8s all;
        color: #005cd4;
        animation: rubberband 400ms alternate ease-out;
    }
    @keyframes rubberband {
        10% {
            transform: scaleX(1);
        }
        40% {
            transform: scaleX(1.12) scaleY(0.75);
        }
        55% {
            transform: scaleX(0.85) scaleY(1);
        }
        75% {
            transform: scaleX(0.9) scaleY(1);
        }
        90% {
            transform: scaleX(1.85) scaleY(0.95);
        }
        100% {
            transform: scaleX(1) scaleY(1);
        }
    }

    .p-presentation {
        padding: 12px 0;
        font-size: 19px;
        width: 90%;
        text-align: justify;
    }

    .container-curriculum {
        position: relative;
        padding: 40px 0;
        display: flex;
        gap: 20px;
    }
    .a-action {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px 30px;
        border: 1px solid #005cd4;
        font-size: 18px;
        background-color: #005cd4;
        text-decoration: none;
        color: #f6f6f9;
        transition: 0.3s;
    }
    .a-action:hover {
        transform: translateX(4px);
    }
    .a-curriculum {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px 30px;
        color: #f6f6f9;
        border: 1px solid #005cd4;
        font-size: 18px;
        text-decoration: none;
        transition: 0.3s;
    }
    .a-curriculum:hover {
        background-color: rgba(0, 72, 168, 0.3);
        transform: translateX(4px);
    }

    .container-photo-profile {
        position: relative;
        width: 50%;
        display: flex;
        justify-content: center;
    }
    .photo-perfil {
        position: relative;
        display: flex;
        justify-content: center;
        overflow: hidden;
        height: 300px;
        width: 300px;
        margin-top: 30px;
        margin-left: 110px;
        border-radius: 50%;
        z-index: 10;
        background: rgba(255, 255, 255, 0.2);
    }

    .photo-perfil img {
        position: relative;
        display: block;
        object-fit: cover;
        height: 100%;
        width: 100%;
        filter: drop-shadow(-10px -5px 10px #000) contrast(110%);
        transition: 0.3s;
    }
    @media (max-width: 900px) {
        .container-presentation {
            flex-direction: column-reverse;
            height: auto;
            gap: 30px;
            padding-top: 100px;
        }
        .container-photo-profile {
            width: 100%;
            justify-content: center;
            justify-items: center;
            margin: 0;
        }
        .photo-perfil {
            margin: 0;
        }
        .container-text {
            width: 100%;
        }
        .text-name, .p-profession{
            font-size: 28px;
        }
        
    }
    @media (max-width: 640px) {
        .p-presentation {
            width: 100%;
        }
    }

    @media (max-width: 500px) {
        .container-curriculum {
            display: flex;
            gap: 10px;
        }
        .linear-gradient-1 {
            display: none;
        }
    }
</style>
