---
import i18next, { t } from "i18next";
type Technology = {
  label?: string;
};
export interface Props {
  title: string;
  img: string;
  description: string;
  badges?: Technology[];
  url: string;
  repository: string;
}
const { title, img, description, badges = [], url, repository } = Astro.props;
---

<li class="li-project">
  <p class="title-project">{title}</p>
  <img src={img} alt={title} loading="lazy" />
  <div class="container-badges">
    {
      badges.map(({ label }) => (
        <div class="badge">
          <span>{label}</span>
        </div>
      ))
    }
  </div>
  <p class="description-project">
    {description}
  </p>
  <div class="container-link-projects">
    <a href={url} target="_blank" rel="noopener noreferrer" class="link-button"
      >{t("badges.website")}
    </a>
    <a
      href={repository}
      target="_blank"
      rel="noopener noreferrer"
      class="link-button"
    >
      {t("badges.repository")}</a
    >
  </div>
</li>

<style>
  .li-project {
  position: relative;
  box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
  overflow: hidden;
  max-width: 380px;
  min-width: 300px;
  width: 100%;
  height: 550px;
  border-radius: 12px;
  transition: transform 0.3s, box-shadow 0.3s;
  background: radial-gradient(
    circle,
    rgba(7, 27, 74, 1) 20%,
    rgb(24, 24, 24) 100%
  ); /* Aplicar el gradiente radial como fondo */
  z-index: 1;
  min-height: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  }

  .li-project:nth-child() {
    min-height: 100%;
  }
  .li-project::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 5px;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: -1;
    bottom: 0;
    transition: 0.3s ease-in-out;
    pointer-events: none;
  }
  .li-project:hover::before {
    content: "";
    position: absolute;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: -1;
    bottom: 0;
    transition: 0.3s ease-in-out;
    pointer-events: none;
  }
  .li-project:hover {
    transform: translateY(-10px);
  }
  .li-project img {
    position: relative;
    display: block;
    max-width: 80%;
    width: 100%;
    object-fit: cover;
    user-select: none;
    pointer-events: none;
    margin: 0 auto;
  }
  .title-project {
    color: #f6f6f9;
    padding: 20px 20px;
    font-size: 20px;
    font-weight: 700;
    margin: 10px 10px;
  }
  .title-project::first-letter {
    text-transform: capitalize;
  }

  
  .container-badges {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem; /* mb-5 en Tailwind */
    padding: 10px;
    gap: 1.25rem;
  
  }
  
  .badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.25rem 0.5rem;
  border-radius: 7px;
  background-color: rgba(124, 193, 253, 0.3); /* Color primario azul con opacidad del 80% */
  color: rgba(124, 193, 253, 1);
  font-size: 0.875rem;
 
}


  

  .description-project {
    padding: 0 10px;
    color: #f6f6f9;
    font-size: 17px;
    font-weight: 400;
    display: -webkit-box;
    -webkit-line-clamp: 8;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-align: justify;
  }
  .description-project::first-letter {
    text-transform: capitalize;
  }

  .title-technologies::first-letter {
    text-transform: capitalize;
  }

  .container-technologies {
    position: relative;
    display: flex;
    justify-content: start;
    padding: 10px 10px;
    column-gap: 20px;
    flex-wrap: wrap;
    color: white;
  }
  .container-link-projects {
    position: relative;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 1.25rem;
    width: 100%;
    padding: 20px 10px;
  }

  
  .link-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem 1rem; /* Espaciado interno del botón */
  border-radius: 0.375rem; /* Bordes redondeados */
  font-size: 0.875rem; /* Tamaño de fuente */
  text-decoration: none; 
  color: rgba(124, 193, 253, 1); 
  background-color: rgba(124, 193, 253, 0.3); /* Color de fondo azul primario */
  border: none; /* Elimina el borde por defecto */
  transition: background-color 0.3s, transform 0.3s; /* Transiciones para cambios de color y transformación */
}
.link-button:hover {
  background-color: #0056b3; /* Color de fondo en hover */
  transform: scale(1.05); /* Efecto de escala en hover */
}

.link-button:focus {
  outline: none; /* Elimina el contorno de enfoque */
  box-shadow: 0 0 0 2px rgba(38, 143, 255, 0.5); /* Sombra de enfoque azul */
}
</style>
