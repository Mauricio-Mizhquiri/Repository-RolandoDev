---
import i18next, { t } from "i18next";
interface Technology {
    label?: string;
}

interface ProjectType {
    title: string;
    img: string;
    description: string;
    badges?: Technology[];
    url: string;
    repository: string;
}
const projects:ProjectType[] = t('projects.myProjects',{ returnObjects: true })
import Project from "./Project.astro";

---
<section class="section-projects">
  <div class="linear-grandient-1"></div>
    <div class="container-projects">
        <h2 class="title-projects" id="projects">{t("navigation.projects")}</h2>
        <div>
            <ul class="ul-projects">
                {
                    projects.map(({ title, img, description, badges, url, repository }) => (
                      <Project
                        title={title}
                        img={img}
                        description={description}
                        badges={badges}
                        url={url}
                        repository={repository}
                      />
                    ))
                  }
            </ul>
            
        </div>


    </div>

</section>

<style> 
    

    .section-projects{
        position: relative;
        background-color: #111111;
        overflow: hidden;
    }

    .linear-grandient-1 {
    position: absolute;
    left: 0;
    top: 1px;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, #005cd4, #000);
    z-index: 0;
  }
  .section-projects {
    position: relative;
    background-color: #111111;
    overflow: hidden;
  }

  .container-projects {
    position: relative;
    width: 90%;
    margin: 0 auto;
    max-width: 1355px;
  }
  .title-projects {
    position: relative;
    display: block;
    font-size: 27px;
    padding: 20px 0;
    color: #f6f6f9;
    width: 100%;
    font-weight: 800;
    scroll-margin-top: 80px;
  }

  .ul-projects {
    position: relative;
    display: grid;
    place-items: center;
    padding: 40px 0;
    width: 100%;
    height: 100%;
  }
  .ul-projects a {
    text-decoration: none;
  }

  /* responsive */

  @media (min-width: 300px) {
    .ul-projects {
      grid-template-columns: 1fr;
      gap: 50px;
    }
  }
  @media (min-width: 700px) {
    .ul-projects {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }
  @media (min-width: 1200px) {
    .ul-projects {
      grid-template-columns: repeat(3, 1fr);
      justify-content: space-between;
    }
  }
</style>
